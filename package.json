{
	"name": "fast-snippets",
	"displayName": "FastSnippets",
	"description": "快捷保存用户代码片段",
	"version": "0.0.1",
	"publisher": "jarze",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "snippets.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "snippets.openFile",
				"title": "Open File"
			},
			{
				"command": "snippets.addFile",
				"title": "Add File",
				"icon": "$(new-file)"
			},
			{
				"command": "snippets.addFolder",
				"title": "Add Folder",
				"icon": "$(new-folder)"
			},
			{
				"command": "snippets.editEntry",
				"title": "Edit",
				"icon": "$(edit)"
			},
			{
				"command": "snippets.deleteEntry",
				"title": "Delete",
				"icon": "$(delete)"
			},
			{
				"command": "snippets.generateFile",
				"title": "Snippets: Generate",
				"category": "Snippets"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "snippets-explorer",
					"title": "Snippets 管理",
					"icon": "$(symbol-snippet)"
				}
			]
		},
		"views": {
			"snippets-explorer": [
				{
					"id": "snippets.explorer",
					"name": "Snippets",
					"icon": "$(symbol-snippet)"
				}
			]
		},
		"menus": {
			"explorer/context": [
				{
					"when": "!explorerResourceIsFolder",
					"command": "snippets.generateFile",
					"group": "6_copypath"
				}
			],
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "snippets.generateFile",
					"group": "1_modification"
				}
			],
			"view/title": [
				{
					"command": "snippets.refreshEntry",
					"when": "view == snippets.explorer",
					"group": "navigation"
				},
				{
					"command": "snippets.addFolder",
					"when": "view == snippets.explorer",
					"group": "navigation"
				},
				{
					"command": "snippets.addFile",
					"when": "view == snippets.explorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "snippets.editEntry",
					"when": "view == snippets.explorer && viewItem == snippets",
					"group": "inline"
				},
				{
					"command": "snippets.deleteEntry",
					"when": "view == snippets.explorer && viewItem == snippets"
				},
				{
					"command": "snippets.addFile",
					"when": "view == snippets.explorer && viewItem == snippetsDir",
					"group": "inline",
					"icon": "$(plus)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.1",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.75.0",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"@vscode/test-electron": "^2.2.2",
		"eslint": "^8.33.0",
		"glob": "^8.1.0",
		"mocha": "^10.1.0",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"mkdirp": "^2.1.3"
	}
}
