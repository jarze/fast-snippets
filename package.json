{
	"name": "quickly-snippets",
	"displayName": "Quickly Snippets",
	"description": "Generate snippets quickly and easily.",
	"version": "1.0.0",
	"publisher": "jarze",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:snippets.generateFile"
	],
	"main": "./out/extension.js",
	"icon": "media/icon.png",
	"contributes": {
		"commands": [
			{
				"command": "snippets.generateFile",
				"title": "Snippets: Generate",
				"category": "Snippets"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "!explorerResourceIsFolder",
					"command": "snippets.generateFile",
					"group": "1_modification"
				}
			],
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "snippets.generateFile",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.1",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.75.0",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"@vscode/test-electron": "^2.2.2",
		"eslint": "^8.33.0",
		"glob": "^8.1.0",
		"mocha": "^10.1.0",
		"typescript": "^4.9.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jarze/quickly-snippets.git"
	},
	"license": "MIT",
	"dependencies": {
		"jsonc": "^2.0.0"
	}
}
